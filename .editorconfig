# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
no_eol_whitespace = false
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.js]
quote_type = single

[*.html]
quote_type = double
max_line_length = 120

[*.md]
max_line_length = off
trim_trailing_whitespace = false
